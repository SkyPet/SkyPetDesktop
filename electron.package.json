{
  "name": "skypetdesktop",
  "version": "0.0.1",
  "main": "main.js",
  "description":"Desktop Application for SkyPet",
  "author":"Daniel Stahl",
  "scripts": {
    "start-electron": "cross-env NODE_ENV='development' electron .",
    "start-react":"cross-env REACT_APP_ELECTRON='true' react-scripts start",
    "build-electron-react":"rm -r -f build-react && rm -r -f build && npm run copy-package && npm run rm-public && npm run rm-src && npm run copy-src && npm run copy-public && cross-env REACT_APP_ELECTRON='true' npm run build && npm run post-process-react && npm run rename-client-build && npm run copy-icon",
    "post-process-react":"node postProcess.js",
    "rm-src":"rm -r -f src",
    "rename-client-build":"mv build build-react",
    "copy-icon":"mkdir build && mv build-react/background.png build && mv build-react/icon.icns build && mv build-react/icon.ico build",
    "rm-public":"rm -r -f public",
    "copy-src": "cp -r ../../htmlApps/SkyPetGUI/src src",
    "copy-public": "cp -r ../../htmlApps/SkyPetGUI/public public",
    "copy-package": "node copyPackage.js",
    "pack": "cross-env NODE_ENV='production' build --dir",
    "dist": "cross-env NODE_ENV='production' build"
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "electron-config": "^0.2.1",
    "node-uuid": "^1.4.7",
    "web3": "^0.18.2"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "cross-env": "^3.1.4",
    "electron-devtools-installer": "^2.0.1",
    "electron-debug": "^1.1.0",
    "react-scripts": "0.8.5",
    "electron-builder": "^11.5.1"
  },
  "build": {
    "appId": "skypet.id",
    "mac": {
      "category": "skypet.category.type"
    },
    "win": {
      "iconUrl": "http://image.flaticon.com/icons/png/512/12/12638.png"
    },
    "asar":false
  },
  
  "homepage": "./",
  "bin": {
    "electron": "./node_modules/.bin/electron"
  }
}
